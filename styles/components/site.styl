.site {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;

  .site-content {

    > * {
      width: 100%;
    }

    // HACK!
    width: 100%;
    height: calc("100% - 61px");
    display: flex;
    flex-direction: row;
  }
  .hamburger-menu {
    position: relative;
    height: 100%;
    border-right: 1px solid $bitdj-color-border;
    background-color: $bitdj-color-background;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;

    .items {
      text-align: center;
    }

    .items .nav-item {
      display: flex;
      height: 25px;
      padding: 10px 0 10px 18px;
      width: 202px;
      align-items: center;
    }

    .items .nav-item i {
      font-size: 25rem;
      margin-right: 16rem;
    }

    &.expanded {
      width: 240px;
    }

    &.expanded .title {
      justify-content: flex-start;
    }

  }
}
